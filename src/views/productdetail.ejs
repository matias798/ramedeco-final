<body class="body-product-detail">
  <%- include('parcials/header.ejs') %> 


<main>

  <section class="titulo-product-detail">
    <h1 >Sillón Dos Cuerpos</h1>
</section>

    <div class="elContenedor">
        <div>
          <img  src="https://images.pexels.com/photos/3757055/pexels-photo-3757055.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="" class="imagen-product">
            
              <div class="texto-izq-product"> El lujo nunca había tenido una mejor cara. 
              </div>
        </div>
            
    </div>

    <div class="elContenedor">
      <div>
        <img  src="https://images.pexels.com/photos/3757055/pexels-photo-3757055.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="" class="imagen-product">
          
            <div class="texto-der-product"> Elaborado con almohadones de Efecto Memoria.
            </div>
      </div>
    </div>
          

      <div class="otroContenedor contenedor-descrip">
        <div class="contenedor-descrip-izq">
          <p class="caja">Sillón de 2 Cuerpos, elaborado con materiales de última tecnología que garantizan tu confort de forma prolongada</p>
        </div>
  
        <div class="contenedor-descrip-der">
          <p class="precio">$ 40.000</p>

          <div class="contenedor-cantidad">
		
            <input class="bajar-cantidad" type="button" value="-" id="dec" onclick="decrementI()"/>
                               
            <label class="cantidad-mostrada" id="display" >1</label>
                               
            <input class="aumentar-cantidad" type="button" value="+" id="inc" onclick="incrementI()"/>
            
            <script> 
              var i = 1;
              var j = 1;
              var k = 11900;
          
              
              function incrementI() {
              if (i < 10) {
               i++;
               k+=1500;
              }
               document.getElementById("display").innerHTML = i;
               document.getElementById("total").innerHTML = k;
              }
          
               function decrementI() {
              if (i > 1) {
              k-=1500;
              --i;
              } 
              document.getElementById("display").innerHTML = i;
              document.getElementById("total").innerHTML = k;
          
              }
          
              function incrementJ() {
              if (j < 10) {
               j++;
               k+=10000;
          
              }
               document.getElementById("display-2").innerHTML = j;
               document.getElementById("total").innerHTML = k;
          
               }
          
               function decrementj() {
              if (j > 1) {
                  k-=10000;
                  --j;
              } 
              document.getElementById("display-2").innerHTML = j;
              document.getElementById("total").innerHTML = k;
          
              }
          
          
          </script>
            
          
          </div>
        
          <button class="boton-agregar-carrito" type="submit">Agregar al carrito</button>
          
          
        </div>
      </div>  

